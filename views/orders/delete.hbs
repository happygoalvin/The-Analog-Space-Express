{{#extends "base"}}

{{#block "content"}}
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <div class="alert alert-danger">
        <p>Are you sure you want to delete order for {{this.user.first_name}}?</p>
        <input type="submit" class="btn btn-danger" value="Yes"/>
        <a href="/orders" class="btn btn-success">No</a>
    </div>
</form>
{{/block}}

{{/extends}}