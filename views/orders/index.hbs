{{#extends 'base'}}

{{#block "content"}}
<form method="GET">
   {{{form}}}
    <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search"/>
</form>
<h1>Orders</h1>
<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Products Purchased</th>
            <th>Order Date</th>
            <th>Order Status</th>
            <th>Quantity</th>
            <th>Amount Paid(cents)</th>
        </tr>
    </thead>
    <tbody>
        {{#each order}}
        <tr>
            <td>{{this.user.first_name}}</td>
            {{#each this.camera}}
            <td>{{this.name}}</td>
            {{/each}}
            <td>{{this.order_date}}</td>
            <td>{{this.orderStatus.name}}</td>
            {{#each this.purchase}}
            <td>
                {{this.quantity}}
            </td>
            {{/each}}
            <td>{{this.total_paid}}</td>
            <td>
                <a class="btn btn-success btn-sm my-2" href="/orders/{{this.id}}/update">Update</a>
                <a class="btn btn-danger btn-sm" href="/orders/{{this.id}}/delete">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table> 
{{/block}}

{{/extends}}